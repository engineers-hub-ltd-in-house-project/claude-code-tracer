# Claude Code Tracer - Environment Variables Template
# Copy this file to .env and fill in your actual values

# === Supabase Configuration ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# === Claude/Anthropic Configuration ===
ANTHROPIC_API_KEY=your-anthropic-api-key

# === GitHub Integration (Optional) ===
GITHUB_TOKEN=your-personal-access-token
GITHUB_REPO=your-org/claude-code-tracer-backup
GITHUB_BRANCH=main

# === Application Configuration ===
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Privacy mode: strict | moderate | minimal
# strict: Maximum privacy protection, all sensitive data masked
# moderate: Balance between privacy and functionality
# minimal: Basic privacy protection only
PRIVACY_MODE=strict

# Auto sync interval in seconds (default: 300 = 5 minutes)
AUTO_SYNC_INTERVAL=300

# Enable/disable real-time monitoring
ENABLE_REALTIME=true

# === API Server Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# === Session Monitoring ===
# Maximum number of concurrent sessions to monitor
MAX_CONCURRENT_SESSIONS=10

# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT=3600

# === Database Configuration ===
# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# === Security ===
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# === Monitoring & Observability ===
# Enable OpenTelemetry tracing
ENABLE_TRACING=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Enable Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# === Feature Flags ===
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable AI-powered analytics
ENABLE_AI_ANALYTICS=true

# Enable automatic issue creation on errors
ENABLE_AUTO_ISSUES=false

# === External Services ===
# Redis configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Webhook URL for notifications (optional)
WEBHOOK_URL=

# === Development Settings ===
# Enable debug mode (DO NOT use in production)
DEBUG=false

# Enable SQL query logging
LOG_SQL_QUERIES=false

# Mock Claude Code SDK (for testing without actual Claude)
MOCK_CLAUDE_SDK=false